<div class="container">

<h2>Spectral Workbench contributors</h2>

  <table class="table">
    <tr>
      <th>Most recent spectrum</th>
      <th>Name</th>
      <th></th>
      <th>Comments</th>
      <th>Activity</th>
    </tr>
    <% @users.each do |user| %>
    <% if user.spectrum_count > 0 %>
    <tr>
      <td><img width="120px" class="img" src="<%= user.spectra(1).first.photo.url(:thumb) %>" /></td>
      <td><a href="<%= user_path(user.login) %>"><%= user.login %></a> | <a href="http://publiclab.org/users/<%= user.login %>">Public Lab profile</a></td>
      <td><%= user.spectrum_count %> spectra</td>
      <td><%= user.comments.length %> comments</td>
      <td>Last uploaded <%= time_ago_in_words(user.spectra(1).first.created_at) %> ago</td>
    </tr>
    <% end %>
    <% end %>
  </table>

</div>
