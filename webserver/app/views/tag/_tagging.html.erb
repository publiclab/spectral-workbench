<p><b>Tags:</b> <span id="tags"><% @spectrum.tags.each do |tag| %> <span id="tag_<%= tag.id %>" class="label label-info"> <a href="/tag/<%= tag.name %>"><%= tag.name %></a> <% if logged_in? && (tag.user_id == current_user.id || tag.spectrum.author == current_user.login || current_user.role == "admin") %><a class='tagdelete' data-remote='true' href='/tag/delete/<%= tag.id %>'>x</a><% end %></span><% end %></span></p>

<form id="tagform" class="form" action="/tag/create">
  <input type="hidden" name="tag[spectrum_id]" value="<%= @spectrum.id %>" />
  <div class="input-prepend">
    <span class="add-on"><i class="icon-tags"></i></span>
    <input id="taginput" name="tag[name]" type="text" class="span10" placeholder="soil, sunlight" data-provide="typeahead" data-source="['calibration','soil','']">
  </div>
</form>

<script>
  jQuery(document).ready(function() {
    $('#tagform').bind('submit', function(e){
      e.preventDefault()
      $.ajax({
        url: "/tag/create",
        type: "POST",
        data: {
          authenticity_token: "<%= form_authenticity_token %>",
          tag: {
            spectrum_id:<%= @spectrum.id %>,
            name:$('#taginput').val()
          }
        },
        success: function(response) {
          response = JSON.parse(response)
          $.each(response['saved'],function(i,tag) {
            var tag_name = tag[0]
            var tag_id = tag[1]
            $('#tags').append("<span id='tag_"+tag_id+"' class='label label-info'><a href='/tag/"+tag_name+"'>"+tag_name+"</a> <a class='tagdelete' data-remote='true' href='/tag/delete/"+tag_id+"'>x</a></span> ")
            $('#taginput').val("")
            $('#tagform .control-group').removeClass('error')
            $('#tagform .control-group .help-inline').remove()
            $('#tag_'+tag_id).bind('ajax:success', function(e,tagid){
              $('#tag_'+tagid).remove()
            });
          })
          if (response['errors'].length > 0) {
            $('#tagform .control-group').addClass('error')
            $('#tagform .control-group .help-inline').remove()
            $('#tagform .control-group').append('<span class="help-inline">'+response['errors']+'</span>')
          }
          $('#taginput').prop('disabled',false)
        }
      })
    });
    $('#tagform').bind('ajax:beforeSend', function(){
      $("#taginput").prop('disabled',true)
    });

  });
</script>
